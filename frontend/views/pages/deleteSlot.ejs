<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Delete Parking Lot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/updateslot.css">
</head>

<body>

    <header>
        <h1>Delete Parking Lots</h1>
    </header>

    <main>
        <% slots.forEach(slot => { %>
            <div class="slot-card">
                <p><strong>Slot Number:</strong> <%= slot.slot_number %></p>
                <p><strong>Status:</strong> <%= slot.status %></p>
        
                <form action="/admin/deleteSlot" method="POST"
                      onsubmit="return confirm('Delete this slot?');">
                    <input type="hidden" name="slot_id" value="<%= slot.slot_id %>">
                    <button type="submit" class="delete-btn">Delete Slot</button>
                </form>
            </div>
        <% }) %>
    </main>

</body>

</html>
