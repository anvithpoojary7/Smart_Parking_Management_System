<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Slots</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-50 font-sans">
  <div class="max-w-7xl mx-auto py-10 px-6">
    <h1 class="text-3xl font-bold mb-6">Welcome to ParkSmart</h1>
    <p class="text-gray-600 mb-10">Update available slots or manage individual slots easily.</p>

    <% if (lots.length === 0) { %>
      <p class="text-red-500">No parking lot assigned to you.</p>
    <% } else { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% lots.forEach(lot => { %>
          <div class="bg-white rounded-xl shadow-md p-6">
            <h2 class="text-xl font-semibold mb-1"><%= lot.parking_lot_name %></h2>
            <p class="text-gray-600 mb-2"><%= lot.location %></p>
            <p class="text-sm text-gray-700 mb-2">
              Availability: 
              <span class="font-medium"><%= lot.available_slots %></span> /
              <%= lot.total_slots %> spots
            </p>
            <div class="h-2 w-full bg-gray-200 rounded mb-4">
              <div class="<%= lot.available_slots / lot.total_slots <= 0.2 ? 'bg-red-500' : 'bg-yellow-400' %> h-2 rounded"
                   style="width: <%= Math.floor((lot.available_slots / lot.total_slots) * 100) %>%">
              </div>
            </div>

            <!-- Set Available Slots -->
            <form action="/admin/updateSlots" method="POST" class="mb-4">
              <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
              <div class="flex gap-2">
                <input type="number" name="available_slots" min="0" max="<%= lot.total_slots %>" placeholder="Set Available" required
                       class="border px-3 py-1 rounded w-full">
                <button type="submit" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700">Set</button>
              </div>
            </form>

            <!-- Decrease Slot -->
            <form action="/admin/decreaseSlot" method="POST" onsubmit="return confirm('Decrease by 1?');" class="mb-2">
              <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
              <button type="submit" class="bg-yellow-500 w-full text-white py-1 rounded hover:bg-yellow-600">Decrease by 1</button>
            </form>

            <!-- Delete Specific Slot -->
            <form action="/admin/deleteSlot" method="POST" onsubmit="return confirm('Delete specific slot?');">
              <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
              <div class="flex gap-2 mt-2">
                <input type="text" name="slot_no" placeholder="Slot No (e.g. A2)" required
                       class="border px-3 py-1 rounded w-full">
                <button type="submit" class="bg-red-500 text-white px-4 py-1 rounded hover:bg-red-600">Delete</button>
              </div>
            </form>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
