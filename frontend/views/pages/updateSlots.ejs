<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Parking Lots - Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/updateslot.css">
</head>

<body>
    <header class="dashboard-header">
        <div class="logo">ParkSmart</div>
        <div class="admin-info">
            <span class="admin-role">Admin</span>
            <span class="admin-email">admin@gmail.com</span>
        </div>
    </header>

    <main class="dashboard-main">
        <h1>Manage Parking Lots</h1>

        <div class="lot-grid">
            <% lots.forEach(lot => { %>
                <div class="lot-card styled-card">
                    <h3><%= lot.parking_lot_name %> - <%= lot.location %></h3>
                    <div class="lot-stats">
                        <p><strong>Total Slots:</strong> <%= lot.total_slots %></p>
                        <p><strong>Available Slots:</strong> <%= lot.available_slots %></p>
                    </div>

                    <form action="/admin/updateSlots" method="POST">
                        <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
                        <input type="number" name="available_slots" placeholder="Set Available Slots" min="0" max="<%= lot.total_slots %>" required>
                        <button type="submit" class="update-btn">Update Slots</button>
                    </form>

                    <form action="/admin/decreaseSlot" method="POST" onsubmit="return confirm('Remove 1 slot?');">
                        <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
                        <button type="submit" class="delete-btn">Delete 1 Slot</button>
                    </form>

                    <form action="/admin/deleteSlots" method="POST" onsubmit="return confirm('Delete this parking lot?');">
                        <input type="hidden" name="lot_id" value="<%= lot.lot_id %>">
                        <button type="submit" class="delete-btn">Delete Lot</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </main>

    <footer class="dashboard-footer">
        <p>&copy; 2025 ParkSmart Management System. All rights reserved.</p>
    </footer>
</body>

</html>
